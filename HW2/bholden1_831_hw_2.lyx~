\begin_inset Formula $x=0$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f(x)\approx f(a)+\frac{f'(a)}{1!}(x-a)+\frac{f''(a)}{2!}(x-a)^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f(x)\approx\sin(0)+\frac{\cos(0)}{1}(x-0)+\frac{-\sin(0)}{2}(x-0)
